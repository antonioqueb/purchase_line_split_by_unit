<odoo>
    <!-- Vista TREE de stock.move.line -->
    <record id="stock_move_line_tree_view_inherit_sku" model="ir.ui.view">
        <field name="name">stock.move.line.tree.inherit.sku</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="sku_unico" readonly="1"/>
                <field name="x_lote_comun"/>
                <field name="x_sku_prefix"/>
            </xpath>
        </field>
    </record>

    <!-- Vista FORM de stock.move.line -->
    <record id="stock_move_line_form_view_inherit_sku" model="ir.ui.view">
        <field name="name">stock.move.line.form.inherit.sku</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quantity']" position="after">
                <field name="sku_unico" readonly="1"/>
                <field name="x_lote_comun"/>
                <field name="x_sku_prefix"/>
            </xpath>
        </field>
    </record>

    <!-- NUEVA Vista: hereda la vista de formulario de stock.picking 
         para agregar columnas en la lista de move_line_ids_without_package -->
    <record id="view_picking_form_inherit_sku_fields" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.sku.fields</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- En la subvista tree de move_line_ids_without_package, agregamos los campos -->
            <xpath expr="//field[@name='move_line_ids_without_package']/tree" position="inside">
                <field name="sku_unico" readonly="1"/>
                <field name="x_lote_comun" readonly="1"/>
                <field name="x_sku_prefix" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
